# No API credentials needed - login with phone number directly!
# Just configure the settings below
SESSION_NAME=telegram_forwarder_otp

# Anti-Detection Settings
USE_PROXY=false
PROXY_HOST=
PROXY_PORT=
PROXY_USERNAME=
PROXY_PASSWORD=

# Rate Limiting (messages per minute)

# Telegram API Configuration (optional - uses public credentials if not provided)
# API_ID=your_api_id_here
# API_HASH=your_api_hash_here

# Web UI Configuration
FLASK_PORT=5001
SECRET_KEY=your_secret_key_here

# Ban Protection
ENABLE_BAN_PROTECTION=true
MAX_DAILY_FORWARDS=100
COOLDOWN_HOURS=2

# Instant Forwarding Settings
INSTANT_FORWARDING=true
MAX_MESSAGES_PER_MINUTE=60
DELAY_BETWEEN_FORWARDS=0.1

